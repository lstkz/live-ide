{
  "extends": "../base.tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["es6", "ES2017.object", "ES2016.Array.Include"],
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "__tests__/**/*",
    "src/**/*",
    "scripts/**/*",
    "jest.config.js",
    ".eslintrc.js"
  ],
  "exclude": ["dist"]
}
